rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if a user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user trying to access the data is the owner.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    match /users/{userId} {
      // A user can only create, read, update or delete their own user document.
      allow read, update, delete: if isSignedIn() && isOwner(userId);
      allow create: if isSignedIn();

      // Write operations are restricted to the owner of the user document.
      // Read operations are also restricted to the owner to ensure data privacy.
      match /{subcollection}/{docId} {
        allow read, list: if isSignedIn() && isOwner(userId);
        allow write: if isSignedIn() && isOwner(userId);
      }
    }
  }
}
